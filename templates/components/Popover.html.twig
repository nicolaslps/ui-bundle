{% props
    position = 'bottom',
    sideOffset = null,
    avoidCollisions = null,
    sticky = false,
    hideWhenDetached = null,
    screenLock = false
%}

{%- set styleProps = getStyleProps(
    'popover.root',
    attributes
) -%}

<hui-popover
    class="{{ style('popover.root', styleProps) }}"
    {{ attributes.without('class') }}
    {% if position %}data-position="{{ position }}"{% endif %}
    {% if sideOffset %}data-side-offset="{{ sideOffset }}"{% endif %}
    {% if avoidCollisions %}avoidCollisions{% endif %}
    {% if sticky %}data-sticky{% endif %}
    {% if hideWhenDetached %}hideWhenDetached{% endif %}
    {% if screenLock %}data-screen-lock{% endif %}
    style="visibility: hidden"
>
    {%- block content %}{% endblock -%}
</hui-popover>