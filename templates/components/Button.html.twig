{%- props href = null, type = "button" -%}

{%- set styleProps = getStyleProps(
    'button',
    attributes
) -%}

{%- set element = href ? 'a' : 'button' -%}

<{{ element }} class="{{ style('button', styleProps) }}"
    {%- if element == 'button' %}
        type="{{ type }}"
    {%- else %}
        href="{{ href }}"
    {%- endif %}
    {{ attributes.without('class') }}
    data-slot="button"
>
    {%- block content -%}{%- endblock -%}
</{{ element }}>