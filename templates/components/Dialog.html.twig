{% props type = 'dialog', open = 'false' %}

{%- set styleProps = getStyleProps(
    'dialog',
    attributes
) -%}

<hui-dialog
    class="{{ style('dialog', styleProps) }}"
    data-type="{{ type }}"
    {{ attributes.without('class', 'type', 'open') }}
    {%- if open == 'true' %}open{% endif %}
>
    <dialog class="{{ style('dialog.native', styleProps) }}">
        {%- block content %}{% endblock -%}
    </dialog>
</hui-dialog>